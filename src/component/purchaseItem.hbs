{{#each data}}
<div class="row">
    <div class="col-4">
        <p class="mb-2">{{number}}</p>
        <b>
            <p class="mb-2">{{status}}</p>
        </b>
    </div>
    <div class="col-2">
        {{#with amount}}
        <p class="mb-2">{{title}}:</p>
        <b>
            <p class="mb-2">{{value}}</p>
        </b>
        {{/with}}
    </div>
    <div class="col-4">
        {{#each images}}
        <img class="border border-dark rounded " src="{{this}}" alt="photo" width="30%" height="100%">
        {{/each}}
    </div>
    <div class="col-2">
        {{#with button}}
        <a class=" mt-3 p-1 btn {{#if isPrimary}} btn-primary{{else}} btn-outline-primary{{/if}}" href="{{link}}"
            width="80%">{{text}}</a>
        {{/with}}
    </div>
</div>
<hr class=" mt-1 mb-3">
</div>
{{/each}}