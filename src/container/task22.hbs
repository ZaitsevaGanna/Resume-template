<h1 class="text-center">{{page_header.title}}</h1>
<p class="text-center">{{page_header.description}}</p>
{{#with section}}
<div class="card">
    <div class="card-body">
        {{#with about_us}}
        <div class="display-6 text-end">{{title_list.main}}</div>
        <h2 class="text-right text-end">{{title_list.sub}}</h2>
        <button class="btn btn-outline-primary">{{button.text}}</button>
        {{/with}}
    </div>
</div>
{{#with advantage}}
<div class="card">
    <div class="card-body">
        <div class="display-5"><b>{{title}}</b></div>
        <div class="card">
            <div class="card-body">
                {{#with efficiency}}
                <div class="display-4"><b>{{title}}</b></div>
                <h6>{{sub_title}}</h6>
                <p>{{description}}</p>
                <button class="btn btn-outline-warning">{{button}}</button>
                {{/with}}
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                {{#with innovation}}
                <div class="display-4 text-center"><b>{{title}}</b></div>
                <h6 class="text-center">{{sub_title}}</h6>
                <p class="text-center">{{description}}</p>
                <button class="btn btn-outline-warning">{{button}}</button>
                {{/with}}
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                {{#with collaboration}}
                <div class="display-4 text-end"><b>{{title}}</b></div>
                <h6 class='text-end'>{{sub_title}}</h6>
                <p class='text-end'>{{description}}</p>
                <button class="btn btn-outline-warning">{{button}}</button>
                {{/with}}
            </div>
        </div>
    </div>
</div>
{{/with}}

{{#with agreement}}
<div class="card">
    <div class="card-body">
        <div class="carb-body">
            <div class="display-5"><b>{{title}}</b></div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-body">{{info.sub_title}}</h5>
                    <div class="card">
                        {{#with info.detail}}
                        <div class="card-body">
                            <p>{{text}}</p>
                            <button class="btn btn-primary">{{button}}</button>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/with}}

{{/with}}